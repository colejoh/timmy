<header class="page__header">
</header>
<div class="page__title">
  <h1>Our Team</h1>
</div>
<script>
  function showPersonInfo(ele) {
    const description = [ele.childNodes[3],ele.childNodes[5]]; // child node 0 is nav text
    description.forEach(node => {
      if (node) node.style.display = "block";
    });
  }

  function hidePersonInfo(ele) {
    const description = [ele.childNodes[3],ele.childNodes[5]]; // child node 0 is nav text
    description.forEach(node => {
      if (node) node.style.display = "none";
    })
  }
</script>
<div class="page__content team">
  <section class="team__people">
    {{#each team.quad}}
      <div style="background: url('{{this.image}}'); background-size: cover; background-position: center" class="team__person" onmouseover="showPersonInfo(this)" onmouseout="hidePersonInfo(this)">
        <div class="team__person_picture-block"></div>
        <div class="team__person_about">
          <div class="team__person_title">
            <span class="team__person_name">{{this.name}}</span><br/>
            {{this.role}}
          </div>
          <p class="team__person_description">{{this.content}}</p>
        </div>
      </div>
    {{/each}}
  </section>
